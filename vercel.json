{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd kelmah-frontend && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "kelmah-frontend/build",
  "installCommand": "echo 'Skipping root install'",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://kelmah-api-gateway-6yoy.onrender.com/api/$1"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "https://kelmah-api-gateway-6yoy.onrender.com/socket.io/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "https://kelmah-api-gateway-6yoy.onrender.com",
      "VITE_WS_URL": "https://kelmah-api-gateway-6yoy.onrender.com"
    }
  }
}