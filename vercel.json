{
  "version": 2,
  "builds": [
    {
      "src": "kelmah-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://kelmah-api.loca.lt/api/$1"
    },
    {
      "source": "/socket.io/(.*)",
      "destination": "https://kelmah-api.loca.lt/socket.io/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://kelmah-api.loca.lt",
    "VITE_WS_URL": "https://kelmah-api.loca.lt"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://kelmah-api.loca.lt",
      "VITE_WS_URL": "https://kelmah-api.loca.lt"
    }
  }
}