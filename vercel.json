{
  "version": 2,
  "builds": [
    {
      "src": "kelmah-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "http://192.168.1.1:3000/api/$1"
    },
    {
      "source": "/socket.io/(.*)",
      "destination": "http://192.168.1.1:3000/socket.io/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "http://192.168.1.1:3000",
    "VITE_WS_URL": "http://192.168.1.1:3000"
  },
  "build": {
    "env": {
      "VITE_API_URL": "http://192.168.1.1:3000",
      "VITE_WS_URL": "http://192.168.1.1:3000"
    }
  }
}