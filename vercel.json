{
  "version": 2,
  "builds": [
    {
      "src": "kelmah-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/auth/(.*)", "destination": "https://kelmah-auth-service.onrender.com/api/auth/$1" },
    { "source": "/api/(.*)", "destination": "http://kelmah-alb-655284218.eu-north-1.elb.amazonaws.com/api/$1" },
    { "source": "/socket.io/(.*)", "destination": "http://kelmah-alb-655284218.eu-north-1.elb.amazonaws.com/socket.io/$1" }
  ]
}
