    "mongoose": "^7.1.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.1",
    "redis": "^5.5.6",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "stripe": "^12.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
