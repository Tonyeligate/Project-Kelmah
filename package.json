{
  "name": "project-kelmah",
  "version": "1.0.0",
  "description": "Platform connecting skilled workers with hirers",
  "main": "index.js",
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:frontend": "jest --config jest.config.js --selectProjects frontend",
    "test:backend": "jest --config jest.config.js --selectProjects auth-service payment-service notification-service",
    "test:auth": "jest --config jest.config.js --selectProjects auth-service",
    "test:payment": "jest --config jest.config.js --selectProjects payment-service",
    "test:notification": "jest --config jest.config.js --selectProjects notification-service",
    "test:critical": "jest --config jest.config.js \"(auth|payment|email).*\\.test\\.jsx?\"",
    "ci": "jest --config jest.config.js --ci --coverage",
    "analyze": "node scripts/autonomous-dev.js",
    "feature-validation": "node scripts/feature-validation.js",
    "identify-test-needs": "node scripts/identify-test-needs.js",
    "update-autonomous-dev": "node scripts/update-autonomous-dev.js",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint --config .eslintrc.js --no-eslintrc --ignore-pattern 'kelmah-frontend/src/tests/**' \"kelmah-backend/services/**/*.js\" \"kelmah-frontend/src/**/*.{js,jsx}\"",
    "preview": "vite preview --port 8080"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
