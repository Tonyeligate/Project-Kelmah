{
  "family": "api-gateway-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::992350137489:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::992350137489:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "api-gateway",
      "image": "992350137489.dkr.ecr.eu-north-1.amazonaws.com/api-gateway:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "API_GATEWAY_PORT",
          "value": "3000"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "JWT_SECRET",
          "value": "Deladem_Tony"
        },
        {
          "name": "JWT_REFRESH_SECRET",
          "value": "Tony_Deladem"
        },
        {
          "name": "INTERNAL_API_KEY",
          "value": "1620768f6453a161531bd4150c0f17cd4dc5ccd46b12332639fe7bd3930da16e"
        },
        {
          "name": "AUTH_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:5001"
        },
        {
          "name": "USER_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:3002"
        },
        {
          "name": "JOB_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:5003"
        },
        {
          "name": "PAYMENT_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:3004"
        },
        {
          "name": "MESSAGING_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:3003"
        },
        {
          "name": "NOTIFICATION_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:3003"
        },
        {
          "name": "REVIEW_SERVICE_URL",
          "value": "http://kelmah-internal-svcs-250d7eb165a8b7d3.elb.eu-north-1.amazonaws.com:5006"
        },
        {
          "name": "CORS_ALLOWLIST",
          "value": "https://project-kelmah.vercel.app,https://kelmah-frontend-cyan.vercel.app"
        },
        {
          "name": "FRONTEND_URL",
          "value": "https://kelmah-frontend-cyan.vercel.app"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/api-gateway",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}




