{
  "name": "kelmah-job-service",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo 'Tests not implemented yet'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "health": "curl http://localhost:$npm_package_config_port/health || echo 'Service not running'",
    "logs": "tail -f logs/*.log || echo 'No logs found'",
    "clean": "rm -rf node_modules logs coverage .nyc_output",
    "validate": "npm-check-updates && npm audit",
    "seed-jobs": "node scripts/seed-jobs.js",
    "reindex-search": "node scripts/reindex-search.js",
    "test:jobs": "jest --testPathPattern=job"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "config": {
    "port": "5003"
  },
  "keywords": [
    "kelmah",
    "microservice",
    "nodejs",
    "api"
  ],
  "author": "Kelmah Team",
  "license": "MIT",
  "description": "Job Service for Kelmah platform"
}
