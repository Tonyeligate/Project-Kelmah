# Auth Service Environment Variables Template
# Copy this file to .env and fill in your actual values

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_chars
JWT_REFRESH_SECRET=your_secure_refresh_secret_here_minimum_32_chars

# Database Configuration
SQL_URL=postgresql://username:password@host:port/database_name

# SMTP Configuration for Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@kelmah.com

# Frontend URL for CORS and email links
FRONTEND_URL=https://your-frontend-domain.com

# Service Configuration
PORT=5001
NODE_ENV=production

# Debug (set to false in production)
NODE_DEBUG=false
