{
  "name": "kelmah-auth-service",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo 'Tests not implemented yet'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "health": "curl http://localhost:$npm_package_config_port/health || echo 'Service not running'",
    "logs": "tail -f logs/*.log || echo 'No logs found'",
    "clean": "rm -rf node_modules logs coverage .nyc_output",
    "validate": "npm-check-updates && npm audit",
    "generate-keys": "node scripts/generate-keys.js",
    "migrate-users": "node scripts/migrate-users.js",
    "test:auth": "jest --testPathPattern=auth"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "6.9.8",
    "passport": "0.7.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rate-limit-redis": "^4.2.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "redis": "^5.5.6",
    "sequelize": "^6.37.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "config": {
    "port": "5001"
  },
  "keywords": [
    "kelmah",
    "microservice",
    "nodejs",
    "api"
  ],
  "author": "Kelmah Team",
  "license": "MIT",
  "description": "Auth Service for Kelmah platform"
}