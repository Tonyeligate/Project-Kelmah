{
  "name": "kelmah-backend",
  "version": "1.0.0",
  "description": "Backend API for Kelmah Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon start-services.js",
    "start:gateway": "cd api-gateway && node server.js",
    "start:auth": "cd services/auth-service && node server.js",
    "start:user": "cd services/user-service && node server.js",
    "start:job": "cd services/job-service && node server.js",
    "start:payment": "cd services/payment-service && node server.js",
    "start:messaging": "cd services/messaging-service && node server.js",
    "test": "jest --watchAll --verbose",
    "test:services": "npm run test --prefix services/auth-service && npm run test --prefix services/user-service",
    "lint": "eslint services/**/*.js api-gateway/**/*.js",
    "format": "prettier --write \"services/**/*.js\" \"api-gateway/**/*.js\"",
    "build": "echo 'No build step required for Node.js services'",
    "health": "node -e \"require('http').get('http://localhost:3000/health', res => { let data = ''; res.on('data', chunk => data += chunk); res.on('end', () => console.log(JSON.parse(data))); }).on('error', err => console.error('Health check failed:', err.message));\""
  },
  "author": "Kelmah Team",
  "license": "ISC",
  "dependencies": {
    "celebrate": "^15.0.3",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "axios": "^1.7.7",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.6.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.2.1",
    "raw-body": "^3.0.0",
    "redis": "^5.5.6",
    "socket.io": "^4.7.2",
    "stripe": "^11.18.0",
    "ua-parser-js": "^1.0.40",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
